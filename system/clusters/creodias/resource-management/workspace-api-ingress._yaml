apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: workspace-api-open
  namespace: rm
  labels:
    app.kubernetes.io/instance: workspace-api-open
    app.kubernetes.io/name: workspace-api-open
  annotations:
    cert-manager.io/cluster-issuer: letsencrypt
    kubernetes.io/ingress.class: nginx
    nginx.ingress.kubernetes.io/enable-cors: "true"
    nginx.ingress.kubernetes.io/proxy-read-timeout: "600"
spec:
  tls:
    - hosts:
        - workspace-api-open.demo.eoepca.org
      secretName: workspace-api-open-tls
  rules:
    - host: workspace-api-open.demo.eoepca.org
      http:
        paths:
          - path: /
            backend:
              serviceName: workspace-api
              servicePort: http
