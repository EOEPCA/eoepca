apiVersion: helm.toolkit.fluxcd.io/v2beta1
kind: HelmRelease
metadata:
  name: proc-ades-pep
  namespace: proc
spec:
  chart:
    spec:
      chart: pep-engine
      version: 0.9.38
      sourceRef:
        kind: HelmRepository
        name: eoepca
        namespace: common
  values:
    imagePullSecrets:
      - name: regcred  
    global:
      context: ades
      pep: proc-ades-pep
      domain: mundi.eoepca.org
      nginxIp: 80.158.54.66
    configMap:
      workingMode: FULL
    resourceServer:
      name: proc-ades
    nginxIntegration:
      enabled: false
    image:
      tag: task415_5
      # pullPolicy: Always
    certManager:
      clusterIssuer: letsencrypt
    volumeClaim:
      name: eoepca-proc-pvc
      create: false

  timeout: 25m0s
  interval: 1m0s
