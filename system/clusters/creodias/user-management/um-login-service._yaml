apiVersion: helm.toolkit.fluxcd.io/v2beta1
kind: HelmRelease
metadata:
  name: um-login-service
  namespace: um
spec:
  chart:
    spec:
      chart: login-service
      version: 1.2.8
      sourceRef:
        kind: HelmRepository
        name: eoepca
        namespace: common
  values:
    volumeClaim:
      name: eoepca-userman-pvc
      create: false
    config:
      domain: gluu.demo.eoepca.org
      volumeClaim:
        name: eoepca-userman-pvc
    opendj:
      # This can be useful to workaround helm 'failed to upgrade' errors due to
      # immutable fields in the 'um-login-service-persistence-init-ss' job
      # persistence:
      #   enabled: false
      volumeClaim:
        name: eoepca-userman-pvc
      resources:
        requests:
          cpu: 100m
          memory: 300Mi
    oxauth:
      volumeClaim:
        name: eoepca-userman-pvc
      resources:
        requests:
          cpu: 100m
          memory: 1000Mi
    oxtrust:
      volumeClaim:
        name: eoepca-userman-pvc
      resources: 
        requests:
          cpu: 100m
          memory: 1500Mi
    oxpassport:
      resources:
        requests:
          cpu: 100m
          memory: 100Mi
    global:
      domain: gluu.demo.eoepca.org
      nginxIp: 185.52.195.19
      namespace: um
    nginx:
      ingress:
        annotations:
          cert-manager.io/cluster-issuer: letsencrypt
        hosts:
          - gluu.demo.eoepca.org
        tls:
          - hosts:
              - gluu.demo.eoepca.org
            secretName: gluu-ingress-tls
  timeout: 25m0s
  interval: 1m0s
